<div class="container-fluid">
        <div class="row-fluid">
            <div class="span10 offset1">

             <% if notice.present? %>
                    <div class="alert alert-success"><%= notice %></div>
                <% end %>
                <% if @message.errors.any? %>
                    <div id="form_errors">
                        <div class="alert alert-error">
                            Por favor corrige lo siguiente para poder enviar tu mensaje:
                        <ul>
                            <% @message.errors.each_with_index do |msg, i| %>
                                <li><%= msg[1] %></li>
                            <% end %>
                        </ul>
                        </div>
                    </div>
                <% end %>

            <h1>Contacto</h1>
            <div class="contact row-fluid">
                <article>
                <p class="lead">
                    Tienes dudas o sugerencias? Te invitamos a dejarnos un mensaje
                </p>
            	<%= form_for @message do |f| %>
                    <div class="control-group">
                        <%= f.label :name, "Nombre:*" %>
                        <%= f.text_field :name, class: "span5" %>
                    </div>

                    <div class="control-group">
                        <%= f.label :email, "Email:*" %>
                        <%= f.text_field :email, class: "span5" %>
                    </div>

                    <div class="control-group">
                        <%= f.label :phone, "TelÃ©fono:" %>
                        <%= f.text_field :phone, class: "span5" %>
                    </div>    

                    <div class="control-group">
                        <%= f.label :comments, "Comentarios*:" %>
                        <%= f.text_area :comments, class: "span5", rows: 7 %>
                    
                    <div class="form-actions">
                        <%= f.submit value: "Enviar", class: "btn btn-primary" %>
                    </div>

            	<% end %>
                </article>
            </div>

        </div>
    </div>
</div>