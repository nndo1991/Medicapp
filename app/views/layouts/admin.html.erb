<!DOCTYPE html>
<html>
<head>
  <title>Medicapp - Admin</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="robots" content="noindex,nofollow">
  <%= stylesheet_link_tag    "admin/application" %>
  <%= javascript_include_tag "admin/application" %>
  <%= csrf_meta_tags %>
</head>
<body class="clearfix admin">
  <% if current_user %>
     <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <%= link_to "Medicapp - Admin", admin_home_path, class: "brand" %>          
          
          <ul class="nav pull-right">
            <li><%= link_to "Cerrar sesión", admin_logout_path, method: :post %></li>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span2">
          <% if current_user %>
            <div class="well sidebar-nav">
            <ul class="nav nav-list">
              <li class="nav-header">Menú</li>
              <li><a href="/admin"><i class="icon-edit"></i> Jornadas</a></li>
              <li><a href="/admin/events"><i class="icon-edit"></i> Eventos</a></li>
              <li><a href="#"><i class="icon-picture"></i> Galería</a></li>
              <li><a href="#"><i class="icon-list"></i> Reportes</a></li>
              <li><a href="/admin/users/<%= @current_user.id %>/edit"><i class="icon-user"></i> Administrador</a></li>
            </ul>
            </div><!--/.well -->
            <% end %>
        </div><!--/span-->
        <div class="span10">
          <%= yield %>
        </div><!--/span-->
      </div><!--/row-->

      <hr>

      <% if current_user %>
      <footer>
        <p>&copy; Medicapp - Admin 2013</p>
      </footer>
      <% end %>

    </div><!--/.fluid-container-->

</body>
</html>